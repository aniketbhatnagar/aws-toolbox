{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "Ec2ImageInstancePolicy",
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "ec2:CreateImage",
        "ec2:CreateSnapshot",
        "ec2:CreateTags",
        "ec2:DeleteSnapshot",
        "ec2:DeregisterImage"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
}
